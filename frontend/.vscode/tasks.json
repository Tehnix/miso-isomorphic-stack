{
  "version": "2.0.0",
  "tasks": [
    //--------------------- Build Tasks ----------------------------
    {
      // Build the frontend
      "label": "Build Frontend",
      "type": "shell",
      "command":
        "(cd .. && stack --stack-yaml=frontend/stack.yaml build --fast)"
    },
    //--------------------- Test Tasks -----------------------------
    {
      // Test the frontend.
      "label": "Test Frontend",
      "type": "shell",
      "command": "(cd .. && stack --stack-yaml=frontend/stack.yaml test --fast)"
    },
    //--------------------- Watcher Tasks --------------------------
    {
      // Retest the frontend on file changes.
      "label": "Watch Test Frontend",
      "type": "shell",
      "command":
        "(cd .. && stack --stack-yaml=frontend/stack.yaml test --fast --haddock-deps --file-watch)",
      "isBackground": true
    }
  ]
}
